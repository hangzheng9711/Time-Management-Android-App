<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="horizontal"
    android:id="@+id/level_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="center"
       android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/text1"
        android:text="任务名"/>
    <EditText
        android:layout_weight="8"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:hint="请输入任务名"
        android:id="@+id/in_name"/>
</LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:id="@+id/level_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:id="@+id/text2"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="颜色"/>
        <Button
            android:id="@+id/color"
            android:text="选取颜色"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"/>
        <TextView
            android:id="@+id/textView_color"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"/>



    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:id="@+id/level_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:id="@+id/text3"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="开始日期"/>
        <Button
            android:id="@+id/start_date"
            android:text="选取开始日期"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"/>
        <EditText
            android:id="@+id/textView_startdate"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"/>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:id="@+id/level_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:id="@+id/text4"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="结束日期"/>
        <Button
            android:id="@+id/end_date"
            android:text="选取结束日期"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp" />

        <EditText
            android:id="@+id/textView_enddate"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/level_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="频率" />

        <Spinner
            android:id="@+id/spiner_frequence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <EditText
            android:id="@+id/edittext_frequence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="周期" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="小时" />


    </LinearLayout>

</LinearLayout>