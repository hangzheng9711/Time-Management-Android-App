<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:numColumns="2"
        android:columnWidth="10dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="60%"
        android:layout_gravity="center"
        app:layout_marginTopPercent="12%"
        android:layout_weight="1"
        android:id="@+id/listView">
    </ListView>

    <Button
        android:id="@+id/buttonselecttime1"
        android:text="选择开始日期"
        android:layout_gravity="left|top"
        app:layout_widthPercent="33%"
        app:layout_heightPercent="8%"
        />
    <Button
        android:id="@+id/buttonselecttime2"
        android:text="选择结束日期"
        app:layout_marginTopPercent="8%"
        app:layout_widthPercent="33%"
        app:layout_heightPercent="8%"
        />
    <EditText
        android:id="@+id/start_time"
        android:layout_gravity="top|center"
        app:layout_marginTopPercent="16%"
        app:layout_widthPercent="33%"
        app:layout_heightPercent="8%"
        android:editable="false"/>
    <Button
        android:id="@+id/texttime"
        android:text="选择开始时间"
        android:layout_gravity="left|top"
        app:layout_widthPercent="33%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="16%"
        />
    <EditText
        android:id="@+id/end_time"
        android:layout_gravity="top|center"
        app:layout_marginTopPercent="24%"
        app:layout_widthPercent="33%"
        app:layout_heightPercent="8%"
        android:editable="false"/>
    <Button
        android:id="@+id/texttime1"
        android:text="选择结束时间"
        android:layout_gravity="left|top"
        app:layout_widthPercent="33%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="24%"
        />

    <EditText
        android:id="@+id/showDate1"
        android:layout_gravity="center|top"
        android:editable="false"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="28%" />
    <EditText
        android:id="@+id/showDate2"
        android:layout_gravity="center|top"
        android:editable="false"
        app:layout_marginTopPercent="8%"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="28%" />
    <TextView
        android:id="@+id/spinnerText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        app:layout_widthPercent="38%"
        app:layout_heightPercent="8%"
        />
    <Spinner
        android:id="@+id/Spinner02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        app:layout_widthPercent="38%"
        app:layout_heightPercent="8%"
        />
    <Button
        android:id="@+id/ok"
        android:text="确定"
        android:layout_gravity="center|top"
        app:layout_widthPercent="24%"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="35%"
        app:layout_marginTopPercent="22%"
        />
    <Button
        android:id="@+id/buttonhome2"
        android:text="主界面"
        android:layout_gravity="left|bottom"
        app:layout_widthPercent="33%"
        app:layout_heightPercent="8%"
        />
    <Button
        android:id="@+id/buttonlog2"
        android:text="记录界面"
        android:layout_gravity="bottom|center"
        app:layout_widthPercent="33%"
        app:layout_heightPercent="8%"
        />
    <Button
        android:id="@+id/buttonfenxi2"
        android:text="分析界面"
        android:layout_gravity="right|bottom"
        app:layout_widthPercent="33%"
        app:layout_heightPercent="8%"
        />



</android.support.percent.PercentFrameLayout>
